一、1007整数分组
#include <iostream>

#include<bits/stdc++.h>

using namespace std;

 

int d[11000],a[110];

 

int main()

{

    int n;

    scanf("%d",&n);

    int sum=0;

    for(int i=0;i<n;i++)

    {

        scanf("%d",&a[i]);

        sum+=a[i];

    }

    int m=sum/2;

    memset(d,0,sizeof(d));

    for(int i=0;i<n;i++)

        for(int j=m;j>=a[i];j--)

            d[j]=max(d[j],d[j-a[i]]+a[i]);

    cout<<sum-2*d[m]<<endl;

}
