#include<iostream>
#include<cstring>
#include<algorithm>
#include<vector>
using namespace std;
int main(){
	int n, k, t, s = 1, p, r = 1;
	cin >> n;
	for(int i = 1; i <= n; i++){
		cin >> k >> t;
		if(i == 1) p = t;
		s *= r;
		while(p % k != t){
			p += s;
		}
		r = k;
	}
	cout << p << endl;
	return 0;
}
